{
  "manifest_version": 3,
  "name": "tomo",
  "version": "1.0",
  "description": "for all your tab fomo needs",
  "permissions": [
    "tabs",
    "downloads",
    "downloads.shelf",
    "windows",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
